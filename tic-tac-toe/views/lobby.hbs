<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-md-2 bg-light border-end p-3">
            <div class="d-flex flex-column h-100">
                <div class="mb-4">
                    <h5 class="mb-3">
                        Players
                    </h5>
                    <div class="players-list">
                        <div
                            class="player-card host-player mb-2 p-2 border rounded"
                        >
                            <div class="d-flex align-items-center">
                                <img
                                    src="{{game.host_avatar_url}}"
                                    id="host-avatar"
                                    alt="Host Avatar"
                                    class="avatar rounded-circle me-2"
                                    style="width: 40px; height: 40px;"
                                />
                                <div>
                                    <div class="fw-bold">
                                        {{game.host_username}} (Host)
                                    </div>
                                    <small class="text-muted">
                                        Rating: {{game.host_rating}}
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div
                            class="player-card guest-player mb-2 p-2 border rounded bg-light"
                        >
                            <div class="text-center text-muted">
                                <i class="bi bi-person-plus"></i>
                                Waiting for player...
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <div
                        class="d-flex justify-content-between align-items-center mb-2"
                    >
                        <h6 class="mb-0">
                            Spectators
                        </h6>
                        <span class="badge bg-secondary">
                            0
                        </span>
                    </div>
                    <div
                        class="spectators-list"
                        style="max-height: 200px; overflow-y: auto;"
                    >
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7 p-4">
            <div class="game-header mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h4>
                        Game Room #{{game.id}}
                    </h4>
                    <div class="game-status">
                        <span class="badge bg-warning">
                            Waiting for Players
                        </span>
                    </div>
                </div>
                <div class="game-info mt-2">
                    <small class="text-muted">
                        Board Size: {{game.board_size}}x{{game.board_size}} |
                        Time Limit: {{game.turn_time_limit}}s per turn
                    </small>
                </div>
            </div>

            <div
                class="game-board-container d-flex justify-content-center align-items-center"
                style="min-height: 400px;"
            >
                <div class="text-center text-muted">
                    <i class="bi bi-hourglass" style="font-size: 48px;"></i>
                    <h5 class="mt-3">
                        Waiting for Players
                    </h5>
                    <p>
                        The game will start once another player joins and the
                        host approves.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 border-start p-3">
            <div class="chat-container d-flex flex-column h-100">
                <div
                    class="d-flex justify-content-between align-items-center mb-3"
                >
                    <h5 class="mb-0">
                        Game Chat
                    </h5>
                    <div class="btn-group">
                        <button
                            type="button"
                            class="btn btn-sm btn-outline-secondary active"
                        >
                            All
                        </button>
                        <button
                            type="button"
                            class="btn btn-sm btn-outline-secondary"
                        >
                            Players
                        </button>
                    </div>
                </div>

                <div class="chat-messages flex-grow-1 overflow-auto mb-3">
                </div>

                <div class="chat-input">
                    <div class="input-group">
                        <input
                            type="text"
                            class="form-control"
                            placeholder="Type a message..."
                            disabled
                        />
                        <button class="btn btn-primary" type="button" disabled>
                            Send
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/lobby.js"></script>
</div>