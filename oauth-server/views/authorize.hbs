<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>
                Authorization Request
            </h2>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4>
                        Welcome to {{client.name}}, {{user.username}}!
                    </h4>
                    <p>
                        Website:
                        <a href="{{client.website_url}}" target="_blank">
                            {{client.website_url}}
                        </a>
                    </p>
                </div>
                <button
                    class="btn btn-outline-secondary"
                    onclick="window.location.href = '/oauth/login'"
                >
                    Login as a different user
                </button>
            </div>

            <div class="alert alert-info">
                <p class="mb-0">
                    The application is requesting access to:
                </p>
            </div>

            <ul class="list-group mb-4">
                {{#each scope}}
                    <li class="list-group-item">
                        {{#if (eq this "profile:basic")}}
                            Basic profile information (username, fullname)
                        {{else if (eq this "profile:full")}}
                            Profile picture
                        {{/if}}
                    </li>
                {{/each}}
            </ul>

            <form
                method="POST"
                action="/oauth/authorize?client_id={{client_id}}&redirect_uri={{redirect_uri}}&scope={{scope}}&state={{state}}"
            >
                <div class="d-grid gap-2">
                    <button
                        type="submit"
                        name="approve"
                        value="true"
                        class="btn btn-primary btn-lg"
                    >
                        Approve
                    </button>
                    <button
                        type="submit"
                        name="approve"
                        value="false"
                        class="btn btn-outline-danger btn-lg"
                    >
                        Deny
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>